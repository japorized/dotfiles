export FFF_FAV6=~/Dropbox/Classes/UW\ Course\ Outlines

export PATH=$HOME/.bin:$HOME/.node_modules/bin:$PATH
export fpath=($fpath $HOME/.bin/fpath)

# Habitica
source $HOME/.habitica-api
