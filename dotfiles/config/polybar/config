margin-bottom = 5

[colors]
include-file = $XDG_CONFIG_HOME/polybar/colors

[common]
height = 25
radius = 10.0

font-0 = "Nimbus Sans:size=11:antialias=true;1"
font-1 = "FontAwesome:fontformat=truetype:size=11:antialias=false;1"
