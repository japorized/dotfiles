[colors]
	background = "#fff3cb"
	foreground = "#010101"
  border_color = "#b23917"
  highlight = "#922f13"

[global]
    ### Display ###

    monitor = 0
    follow = mouse

    geometry = "300x30-30-20"
    indicate_hidden = yes
    shrink = no
    transparency = 0
    notification_height = 0
    separator_height = 5
    padding = 20
    horizontal_padding = 20
    frame_width = 5

    frame_color = "#b6ae67"
    separator_color = frame
    sort = yes
    idle_threshold = 300

    ### Text ###
    font = Helvetica Neue 10, Fontawesome 10
    line_height = 0

    markup = full

    # The format of the message.  Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    #   %n  progress value if set without any extra characters
    #   %%  Literal %
    # Markup is allowed
    format = "<b>%s </b>\n%b"
    alignment = left
    show_age_threshold = 60
    word_wrap = yes
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    ### Icons ###
    icon_position = left
    max_icon_size = 32
    icon_path = /usr/share/icons/Arc/status/16/:.icons/flattrcolor/status/24:.icons/flattrcolor/devices/48:.icons/flattrcolor/apps/scalable:.icons/flattrcolor/actions/scalable

    ### History ###
    sticky_history = yes
    history_length = 20

    ### Misc/Advanced ###
    dmenu = /usr/bin/rofi -show run -p dunst:
    browser = /usr/bin/firefox -new-tab
    always_run_script = true
    title = Dunst
    class = Dunst
    startup_notification = false
    force_xinerama = false

[experimental]
    per_monitor_dpi = false

[shortcuts]
    close = mod1+c
    close_all = mod1+shift+c
    history = mod1+grave
    context = mod1+shift+grave

