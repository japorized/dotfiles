# Category: System controls

# Desc: run rofi-powermenu
{XF86PowerOff,super + alt + grave}
  rofi-powermenu

# Desc: increase brightness by 5%
{XF86MonBrightnessUp,Menu : F6}
  /usr/bin/light -A 5 && ~/.config/lemonbar/brightness.sh

# Desc: increase brightness by 15%
{shift + XF86MonBrightnessUp,Menu : shift + F6}
  /usr/bin/light -A 15 && ~/.config/lemonbar/brightness.sh

# Desc: decrease brightness by 5%
{XF86MonBrightnessDown,Menu : F5}
  /usr/bin/light -U 5 && ~/.config/lemonbar/brightness.sh

# Desc: decrease brightness by 15%
{shift + XF86MonBrightnessDown,Menu : shift + F5}
  /usr/bin/light -U 15 && ~/.config/lemonbar/brightness.sh

# Desc: go to next on mpd
{XF86AudioNext,Menu : F9}
  mpc next

# Desc: restart/go to prev on mpd
{XF86AudioPrev,Menu : F7}
  mpc cdprev

# Desc: toggle play pause on mpd
{XF86AudioPlay,XF86AudioPause,Menu; F8}
  mpc toggle

# Desc: increase volume by 2%
{XF86AudioRaiseVolume,Menu : F3}
  sh -c "~/.bin/mypactl -u 2 && $HOME/.config/lemonbar/vol.sh &"

# Desc: increase volume by 10%
{shift + XF86AudioRaiseVolume,Menu : shift + F3}
  sh -c "~/.bin/mypactl -u 10 && $HOME/.config/lemonbar/vol.sh &"

# Desc: decrease volume by 2%
{XF86AudioLowerVolume,Menu : F2}
  sh -c "~/.bin/mypactl -d 2 && $HOME/.config/lemonbar/vol.sh &"

# Desc: decrease volume by 10%
{shift + XF86AudioLowerVolume,Menu : shift + F2}
  sh -c "~/.bin/mypactl -d 10 && $HOME/.config/lemonbar/vol.sh &"

# Desc: toggle audio mute
{XF86AudioMute,Menu : F1}
  sh -c "~/.bin/mypactl -m && $HOME/.config/lemonbar/vol.sh &"

