#
# wm independent hotkeys
#

# terminal emulator
super + Return
  termite

shift + super + Return
  tdrop -ma -w -2 -s "Ôãê dropdown" termite

# shift + super + Return
#   kitty --new-session ~/.config/kitty/new-tmux

alt + grave
  kill -s USR1 $(pidof deadd-notification-center)

# program launcher
alt + space
	rofi -show run

shift + alt + space
  dmenu_extended_run

super + grave
  rofi -show window

@ctrl + super + alt + {f,e,t,z}
  {firefox,\
  nvim-qt,\
  thunar,\
  tabbed-zathura -i reader}

# status display
super + i
  rofi-lemon

super + o
  sh -c "~/.bin/show-lemonbar datetime battery"

super + n
  sh -c "~/.bin/show-lemonbar nowplaying"

# picture-in-picture mode
super + p
  sh -c "~/.bin/bspc-pip"

# scrot hotkey
@alt + super + {s,e,m,b,a}
  {rofi-scrot,rofimoji,rofi-mpc,rofi-btctl,rofianime}

@alt + super + r : {h,j,k,l}
  xrandr --output eDP-1 --rotate {left,normal,inverted,right}

{XF86Favorites,@alt + super + w}
  rofiwpg

{XF86PowerOff,@alt + super + grave}
  rofi-powermenu

# XF86 Keys & Context Menu key as modal key for multimedia-key emulation
  # Context Menu is Menu button for generic keyboards
  # Press ESC to exit mode
{XF86MonBrightnessUp,Menu : F6}
  /usr/bin/light -A 5 && ~/.config/lemonbar/brightness.sh

{shift + XF86MonBrightnessUp,Menu : shift + F6}
  /usr/bin/light -A 15 && ~/.config/lemonbar/brightness.sh

{XF86MonBrightnessDown,Menu : F5}
  /usr/bin/light -U 5 && ~/.config/lemonbar/brightness.sh

{shift + XF86MonBrightnessDown,Menu : shift + F5}
  /usr/bin/light -U 15 && ~/.config/lemonbar/brightness.sh

{XF86AudioNext,Menu : F9}
  mpc next

{XF86AudioPrev,Menu : F7}
  mpc cdprev

{XF86AudioPlay,XF86AudioPause,Menu: F8}
  mpc toggle

{XF86AudioRaiseVolume,Menu : F3}
  sh -c "~/.bin/mypactl -u 2"

{XF86AudioLowerVolume,Menu : F2}
  sh -c "~/.bin/mypactl -d 2"

{shift + XF86AudioRaiseVolume,Menu: shift + F3}
  sh -c "~/.bin/mypactl -u 10"

{shift + XF86AudioLowerVolume,Menu : shift + F2}
  sh -c "~/.bin/mypactl -d 10"

{XF86AudioMute,Menu : F1}
  sh -c "~/.bin/mypactl -m"

{XF86Calculator,Menu : F11}
  /usr/bin/rofi -show calc -modi calc -no-show-match -no-sort

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
#
# bspwm hotkeys
#

# quit bspwm normally
super + alt + Escape
	sh -c "$HOME/.bin/cleandesktop.sh && bspc quit"

# restart bspwm
super + alt + shift + r
  bspc wm -r

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the biggest node
super + b
	bspc node -s biggest.local

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t "~{tiled,pseudo_tiled,floating,fullscreen}"

# set the node flags
super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}

# set node layer
super + ctrl + {minus,equal,plus}
  bspc node -l {below,normal,above}

#
# focus/swap/rotate
#

# focus the node in the given direction
super + {h,j,k,l}
  bspc node -f {west,south,north,east}

super + shift + {h,j,k,l}
  sh -c "~/.bin/bspc-smartmove {left,down,up,right}"

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
# super + bracket{left,right}
super + {Left,Right}
	bspc desktop -f {prev,next}.local

# focus the older or newer node in the focus history
super + {Tab,shift + Tab}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

super + shift + {Left,Right}
  bspc node -d {prev,next}

# rotate nodes
super + {_,shift +}r
  bspc node @/ -R {90,270}

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

#
# Gap control
#
super + g
  sh -c "~/.config/bspwm/gaps.sh"

#
# Floating windows
#
# snap a floating window
super + w
  sh -c "~/.bin/bspc-floatsnap"
