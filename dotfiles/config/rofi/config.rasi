configuration {
	modi: "run,drun,window";
	width: 50;
	lines: 6;
	font: "Hack Nerd Font 12";
	location: 0;
	padding: 30;
	yoffset: -20;
	xoffset: 0;
	show-icons: true;
	terminal: "st";
	line-margin: 10;
	separator-style: "none";
	hide-scrollbar: true;
	fullscreen: false;
	fake-transparency: true;
	theme: "~/.config/rofi/themes/rofi-default.rasi";
	color-normal: "#272822, #f9f8f5, #272822, #a1efe4, #f9f8f5";
	color-urgent: "#272822, #f92672, #272822, #a6e22e, #f9f8f5";
	color-active: "#272822, #f4bf75, #272822, #66d9ef, #f9f8f5";
	color-window: "#272822, #a1efe4, #58837d";
}
