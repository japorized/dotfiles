# increase region size
shift + cmd + alt - l : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge west
shift + cmd + alt - j : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge south
shift + cmd + alt - k : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge north
shift + cmd + alt - h : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge east

# decrease region size
cmd + alt - l : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge west
cmd + alt - j : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge south
cmd + alt - k : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge north
cmd + alt - h : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge east

# set insertion point for focused container
ctrl + cmd - space : chunkc tiling::window --use-insertion-point cancel
ctrl + cmd - h : chunkc tiling::window --use-insertion-point west
ctrl + cmd - j : chunkc tiling::window --use-insertion-point south
ctrl + cmd - k : chunkc tiling::window --use-insertion-point north
ctrl + cmd - l : chunkc tiling::window --use-insertion-point east

# rotate tree
alt - r : chunkc tiling::desktop --rotate 90

